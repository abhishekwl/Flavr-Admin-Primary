<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginStart="8dp"
        android:id="@+id/itemsListItemImageView"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorPrimaryDark"
        tools:src="@drawable/logo_grey"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <LinearLayout
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/itemsListItemItemName"
            android:fontFamily="@font/futura"
            android:textSize="20sp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/colorTextDark"
            tools:text="Aloo Tiki Burger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/itemsListItemItemCost"
            android:textSize="16sp"
            android:textColor="#757575"
            tools:text="\u20b9 30"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/itemsListItemItemVeg"
        android:textColor="@color/colorVeg"
        android:fontFamily="@font/futura"
        android:textSize="18sp"
        android:layout_marginEnd="14dp"
        android:layout_gravity="center"
        tools:text="VEG"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>